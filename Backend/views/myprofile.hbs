<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="/images//letter-a-icon.png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
    crossorigin="anonymous" referrerpolicy="no-referrer">
  <link rel="stylesheet" href="/stylesheets/myprofile.css">
  <title>Anime project - Acceso</title>
</head>

<div class="main-container">
  <div class="profile-container">
    <div class="profile-img-container">
      <img src="/images/{{user.foto}}" alt="portada-anime">
    </div>
    <div class="profile-name-container">
      <h1>{{user.nombre}}</h1>
      <div class="profile-name-container-options">
        <button type="button" id="open-popup-btn" class="btn btn-danger">Foto de perfil <i
            class="bi bi-pencil-fill"></i></button>
        <a href="/logout">Cerrar sesi√≥n <i class="bi bi-box-arrow-right"></i></a>
      </div>

    </div>
  </div>

  <div class="favorite-container">
    <div class="favorite-tittle">
      <h2>Mis animes favoritos:</h2>
    </div>
    <div>
      <section class="card-section-containter row m-auto">
        <div class="cards-container">
          {{#each animes}}
          <div class="card text-white bg-transparent">
            <img class="card-img-top" src="/images/{{portada}}" alt="Card image cap">
            <div class="card-body">
              <p class="card-text">{{nombre}}</p>
            </div>
            <a href="/anime/{{id}}/{{urlEncode nombre}}" style="color: white;">
              <div class="content">
                <h3>{{nombre}}</h3>
                <p>{{descripcion}}</p>
              </div>
            </a>
          </div>
          {{/each}}
        </div>
      </section>
    </div>
  </div>
</div>

<div id="popup" class="popup" style="display: none;">
  <div class="popup-content">
    <span id="close-popup-btn" class="close">&times;</span>
    <h2>Selecciona una nueva foto</h2>
    <form id="popup-form">
      <div class="popup-photos">
        {{#each photos}}
        <label>
          <img src="/images/{{foto}}" alt="Foto" width="100">
          <input type="radio" name="element" value="{{id}}">
        </label>
        {{/each}}
      </div>
      <div class="popup-buttons">
        <button type="submit" class="btn btn-success">Aceptar</button>
        <button type="button" id="cancel-popup-btn" class="btn btn-danger">Cancelar</button>
      </div>
    </form>
  </div>
</div>

<script src="/javascripts/myprofilehandler.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>