        <p class="card-text">{{nombre}}</p>
      </div>
      <a href="/anime/{{id}}/{{urlEncode nombre}}" style="color: white;">
        <div class="content">
          <h3>{{nombre}}</h3>
          <p>{{descripcion}}</p>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
</section>